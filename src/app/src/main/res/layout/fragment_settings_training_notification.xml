<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.climbershangout.climbershangout.settings.SettingsTrainingNotificationFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="2">

        <CheckBox
            android:id="@+id/settings_notification_prep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sound_prep"
            android:layout_column="0"
            android:layout_row="0" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/settings_notification_prep_time"
            android:layout_width="@dimen/settings_notification_control_width"
            android:layout_height="@dimen/number_picker_height"
            app:np_textSize="@dimen/number_picker_text_size"
            android:marqueeRepeatLimit="-1"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/color_prepare"
            app:np_textColor="@color/color_prepare"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="0"/>

        <CheckBox
            android:id="@+id/settings_notification_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sound_work"
            android:layout_column="0"
            android:layout_row="1"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/settings_notification_work_time"
            android:layout_width="@dimen/settings_notification_control_width"
            android:layout_height="@dimen/number_picker_height"
            app:np_textSize="@dimen/number_picker_text_size"
            android:marqueeRepeatLimit="-1"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/color_work"
            app:np_textColor="@color/color_work"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="1"/>

        <CheckBox
            android:id="@+id/settings_notification_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sound_rest"
            android:layout_column="0"
            android:layout_row="2"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/settings_notification_rest_time"
            android:layout_width="@dimen/settings_notification_control_width"
            android:layout_height="@dimen/number_picker_height"
            app:np_textSize="@dimen/number_picker_text_size"
            android:marqueeRepeatLimit="-1"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/color_rest"
            app:np_textColor="@color/color_rest"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="2"/>

        <CheckBox
            android:id="@+id/settings_notification_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sound_pause"
            android:layout_column="0"
            android:layout_row="3"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/settings_notification_pause_time"
            android:layout_width="@dimen/settings_notification_control_width"
            android:layout_height="@dimen/number_picker_height"
            app:np_textSize="@dimen/number_picker_text_size"
            android:marqueeRepeatLimit="-1"
            app:np_orientation="horizontal"
            app:np_dividerColor="@color/color_pause"
            app:np_textColor="@color/color_pause"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="3"/>

        <CheckBox
            android:id="@+id/settings_notification_vibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_vibrate_when_notifying"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/settings_tone_volume"
            android:layout_marginLeft="10dp"
            android:layout_column="0"
            android:layout_row="5"/>

        <SeekBar
            android:id="@+id/settings_notification_tone_volume"
            android:layout_width="@dimen/settings_notification_control_width"
            android:layout_height="@dimen/number_picker_height"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="5"
            />

    </GridLayout>

</FrameLayout>
