<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/choose_image_gallery"
            android:layout_width="@dimen/choose_image_source_button_size"
            android:layout_height="@dimen/choose_image_source_button_size"
            android:background="@drawable/ic_image"
            android:text="@string/button_from_gallery"
            />

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/choose_image_camera"
            android:layout_width="@dimen/choose_image_source_button_size"
            android:layout_height="@dimen/choose_image_source_button_size"
            android:background="@drawable/ic_photo_camera"
            android:text="@string/button_from_gallery"
            />

    </LinearLayout>

</LinearLayout>