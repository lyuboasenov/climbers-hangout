<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/training_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="?android:colorBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="5dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:textAppearanceMedium" />

        <include layout="@layout/separator" />

        <TextView
            android:id="@+id/view_exercise_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3">

            <TextView
                android:id="@+id/view_exercise_sets"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_accent"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"/>

            <TextView
                android:id="@+id/view_exercise_reps"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_accent"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/view_exercise_pause"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_pause"
                android:layout_column="2"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/view_exercise_work"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_work"
                android:layout_column="1"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/view_exercise_rest"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_rest"
                android:layout_column="2"
                android:layout_row="1"/>

        </GridLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>