<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.climbershangout.climbershangout.climb.AddRouteActivity$DetailedFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView android:id="@+id/add_route_image_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:adjustViewBounds="true" />

        <ImageView android:id="@+id/add_route_image_overlay"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/ic_photo_camera"
            android:adjustViewBounds="true" />

    </RelativeLayout>


    <TextView android:id="@+id/add_route_length"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Lenght: 0" />

</LinearLayout>
