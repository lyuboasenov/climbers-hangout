<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_hold_hold_size"
    android:layout_height="@dimen/view_hold_hold_size">

    <ImageView
        android:id="@+id/view_hold_place_holder"
        android:layout_width="@dimen/view_hold_place_holder_size"
        android:layout_height="@dimen/view_hold_place_holder_size"
        android:visibility="gone"
        android:src="@drawable/ic_place_holder"/>

    <ImageView
        android:id="@+id/view_hold_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <SeekBar
        android:id="@+id/view_hold_slider"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/view_hold_slider_width"
        android:layout_height="wrap_content" />

</RelativeLayout>